#!/bin/bash
# Install in-place.
if [ "$1" == '' ]; then
    sheetFile="sheets/cwDark-ffffff.css"
else
    sheetFile="$1"
fi

for theme in /usr/share/messageviewer/defaultthemes/*; do
    if [ -e "$theme/style-original.css" ]; then
        echo "Uninstalling from $theme ."
        cp "$theme/style-original.css" "$theme/style.css"
        rm "$theme/style-original.css" "$theme/custom.css"
    else
        echo "Not installed in $theme ."
    fi
done
